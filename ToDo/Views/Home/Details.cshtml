@model IEnumerable<ToDo.Models.Task>

<h1>Tasks list</h1>

<a asp-action="CreateTask" asp-route-id="@Model.Last().Id">Create new Task</a>

<table class="table">
	<thead>
		<tr>
			<th>Description</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model == null)
		{
			<tr>
				<td>No Tasks</td>
				<a asp-action="CreateTask" asp-route-id="@Model.Last().Id +1">Create new Task</a>
			</tr>
		}
		else
		{
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Description</td>
					<td>
						<a asp-action="DeleteTask" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
			}
		}

	</tbody>
</table>
